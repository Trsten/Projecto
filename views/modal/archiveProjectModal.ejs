<script>
	document.addEventListener("DOMContentLoaded", () => {
		const modal = document.getElementById("projectModal");
		modal.addEventListener("show.bs.modal", (event) => {
			const button = event.relatedTarget;
			const project = button.getAttribute("data-bs-data");
			const idInput = modal.querySelector("#projectModal-projectId");
			idInput.value = project;
		});
	});
</script>

<%- include("./modalStart", { title: "Archive project?", action: "/project/archive", modalId: "projectModal" }); -%>
<p>
    Do you wish to archive the project?
</p>
<%- include("./modalEnd"); -%>
