<script>
	document.addEventListener("DOMContentLoaded", () => {
		const modal = document.getElementById("riskModal");
		modal.addEventListener("show.bs.modal", (event) => {
			const button = event.relatedTarget;
			const risk = button.getAttribute("data-bs-data");
			const idInput = modal.querySelector("#riskModal-riskId");
			idInput.value = risk;
		});
	});
</script>

<%- include("./modalStart", { title: "Delete risk?", action: "/risk/delete", modalId: "riskModal", modalName: "riskId" }); -%>
<p>
    Do you wish to delete this risk?
</p>
<%- include("./modalEnd"); -%>
